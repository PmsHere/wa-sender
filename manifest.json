{
  "manifest_version": 3,
  "name": "WhatsApp Campaign Manager",
  "version": "1.0",
  "description": "Send personalized WhatsApp messages to multiple contacts directly from web.whatsapp.com",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp Campaign Manager"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}